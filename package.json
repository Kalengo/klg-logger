{
  "name": "klg-logger",
  "version": "1.0.2",
  "description": "log 工具，基于 tracer，简单，可以显示 log 的位置",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "./node_modules/.bin/tsc -d -p ./",
    "test": "jest --config=jest.json",
    "cov": "jest --config=jest.json --coverage --coverageDirectory=coverage",
    "pretest": "npm run build"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "coverage",
      "dist",
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git.oschina.net/kalengo/klg-logger"
  },
  "keywords": [
    "log",
    "klg"
  ],
  "author": "nick",
  "license": "ISC",
  "dependencies": {
    "tracer": "^0.8.12"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/should": "^13.0.0",
    "istanbul": "^0.4.5",
    "jest": "^22.4.2",
    "mocha": "^5.0.2",
    "nyc": "^11.4.1",
    "should": "^13.2.1",
    "source-map-support": "^0.5.3",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-klg": "^1.0.2",
    "typescript": "^2.7.2"
  }
}
